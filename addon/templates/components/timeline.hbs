<div class="" ...attributes>
  <TransitionIn @type="slide-up">
    <h2 class="uppercase text-center text-5xl font-light mb-10">Timeline</h2>
  </TransitionIn>
  <div class="mb-10 text-center flex justify-center">
    <button {{action "updateItems" "study"}} class="hover:bg-teal hover:text-white border-r border-solid border-grey-darker py-2 px-4 italic text-3xl font-light text-grey-darker">Study related</button>
    <button {{action "updateItems" "work"}} class="hover:bg-teal hover:text-white border-l border-solid border-grey-darker py-2 px-4 italic text-3xl font-light text-grey-darker">Work related</button>
  </div>

  <div class="timeline-head"></div>

  <div class="timeline-items">
    {{yield (hash
        Now=(component "timeline/now")
        Unit=(component "timeline/unit" currentType=currentType)
    )}}
  </div>

  <div class="timeline-tail"></div>
</div>