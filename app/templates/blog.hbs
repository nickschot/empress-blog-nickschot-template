
<div class="container mx-auto">
  <div class="px-5">
    <div class="flex flex-wrap -mx-5">
      {{#each (sort-by 'date:desc' model) as |post index|}}

          {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
          <div class="w-1/2 xl:w-1/3 p-5">
            <PostCard @post={{post}} @index={{index}} class="h-full w-full"/>
          </div>

      {{/each}}
    </div>
  </div>
</div>