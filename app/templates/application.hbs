    <header class="fixed w-full z-50 pin-t bg-teal text-white">
        <nav class="container mx-auto py-4">
            <Navigation />
        </nav>
        <div class="site-head-center">
            {{#if @site.logo}}
            <a class="site-head-logo" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}" /></a>
            {{else}}
            <a class="site-head-logo" href="{{@site.url}}">{{@site.title}}</a>
            {{/if}}
        </div>
        <div class="site-head-right">
            <div class="social-links">
                {{#if @site.facebook}}
                <a href="{{facebook_url @site.facebook}}" title="Facebook" target="_blank" rel="noopener">Facebook</a>
                {{/if}}
                {{#if @site.twitter}}
                <a href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener">Twitter</a>
                {{/if}}
                {{#if blog.host}}
                <a href={{concat "https://feedly.com/i/subscription/feed/" (encode blog.host) "/rss.xml"}} title="RSS" target="_blank" rel="noopener">RSS</a>
                {{/if}}
            </div>
        </div>
    </header>

    <main id="site-main" class="pt-16">

        {{!-- All the main content gets inserted here, index.hbs, post.hbs, etc --}}
        {{outlet}}

    </main>

    {{!-- The footer at the very bottom of the screen --}}
    <footer class="text-center py-16">
      <div class="mx-auto mb-10 border-solid border-t border-grey pt-10" style="width:20rem">
        <ul class="social-icons">
          <li class="social-icon github"><a href="https://github.com/nickschot" target="_blank"><FaIcon @icon="github" @prefix="fab"/></a></li>
          <li class="social-icon twitter"><a href="https://twitter.com/nickschot" target="_blank"><FaIcon @icon="twitter" @prefix="fab"/></a></li>
          <li class="social-icon linkedin"><a href="https://www.linkedin.com/in/nick-schot-4936a030" target="_blank"><FaIcon @icon="linkedin" @prefix="fab"/></a></li>
        </ul>
      </div>
      <span class="text-center text-grey-darker font-light text-lg">&copy; 2016-{{date format="YYYY"}} &ndash; Nick Schot</span>
    </footer>
